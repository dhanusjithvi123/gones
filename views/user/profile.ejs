<%- include('../user/layouts/user-header.ejs') %>

	<div class="container">
		<div class="main-body">


          
			<div class="row gutters-sm mt-3">
				<div class="col-md-4 mb-3">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
								<img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
									class="rounded-circle" width="150">
								<div class="mt-3">
									<h4>
										<%= userData.name %>
									</h4>
								
								</div>
							</div>
						</div>
					</div>
                    

					<div style="margin: 3%;" class="row">
						<div class="col-sm-12">
							<a class="btn btn-info " href="/addaddress">Add Address</a>
						</div>
					</div>

					
					<div style="margin: 3%;" class="row">
						<div class="col-sm-12">
							<a class="btn btn-info " href="/alladdress">All Address</a>
						</div>
					</div>

					
				</div>
				
				<div class="col-md-8">
