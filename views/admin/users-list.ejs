<%- include('../admin/layouts/admin-header.ejs') %>

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
            href="https://datatables.net">official DataTables documentation</a>.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <% Users.forEach(function(user){ %>
                        <tr>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td class="px-4 py-3 text-xs">
                                <% if(user.isBlocked){ %>
                                    <span class="badge rounded-pill alert-danger">Blocked</span>
                                    <% } else { %>
                                        <span class="badge rounded-pill alert-success">Active</span>
                                        <% } %>
                            </td>
                            <td>
                           
                                <% if(user.isBlocked===false){ %>
                                     
                                       <a class=" btn-sm btn-btn-primary" href="/admin/blockUser/<%= user._id %>">block</a>
                                    <!-- <span><i class="bi bi-person-fill-slash"></i></span> -->
                                    <% } else { %>
                                        
                                        <a href="/admin/unBlockUser/<%= user._id%>" class="btn btn-success">Unblock</a>
                                        <!-- <span><i class="bi bi-person-fill-check"></i></span> -->
                                        <% } %>
                            </a>

                            <!-- <a href="/admin/users/details/<%= user._id %>"
                                class="flex items-center justify-between w-200px px-2 py-1 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-red-600 border border-transparent rounded-lg active:bg-red-600 hover:bg-red-700 focus:outline-none focus:shadow-outline-red">

                                View details</a> -->
                        </td>
                            
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->

