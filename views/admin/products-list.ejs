<%- include('../admin/layouts/admin-header.ejs') %>


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
            href="https://datatables.net">official DataTables documentation</a>.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Image</th>
                            <th>product</th>
                            <th>Price</th>
                            <th>Stok</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>S.No</th>
                            <th>Image</th>
                            <th>product</th>
                            <th>Price</th>
                            <th>Stok</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <% Products.forEach(function(product){ %>
                        <tr>
                            <td> <%= index++ %></td>
                            <td> <img style="height: 100px; width: 100px;" src="<%= product.image_url[0].url%>" alt=""></td>
                            
                            <td>  <%= product.productName %></td>
                            <td> <%= product.Price %></td>
                            <td>  <%= product.Stock %></td>
                            <td class="px-4 py-3 text-xs">
                                <% if(product.flag){ %>
                                    <span class="badge rounded-pill alert-danger">Disabled</span>
                                    <% } else if(product.qty==0) { %>
                                        <span class="badge rounded-pill alert-warning">Out of Stock</span>
                                    <% } else { %>
                                        <span class="badge rounded-pill alert-success">Active</span>
                                        <% } %>
                            </td>
                            <td>
                           
                                <a href="/admin/products/flag/<%= product._id %>">
                                    <% if(product.flag){ %>
                                        <button type="submit" style="margin: 5%"
                                            class="btn btn-warning flex items-center justify-between width=50% px-2 py-1 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple"
                                            title="enable">
                                            Unflag</button>
                                        <% } else { %>
                                            <button type="submit" style="margin: 5%"
                                                class="btn  btn-info flex items-center justify-between width=50% px-2 py-1 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple"
                                                title="disable">
                                                flag </button>
                                            <% } %>
                                </a>
                                <a href="/admin/products/edit/<%= product._id %>">
                                    <button
                                        class="btn btn-info flex items-center justify-between width=50%  px-2 py-1 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple"
                                        title="edit">Edit</button>
                                </a>

                           
                        </td>
                            
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->

<!-- Footer -->
